{
  "name": "checkmate",
  "version": "1.0.0",
  "description": "chess with friends",
  "main": "./src/index.js",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-client": "npm run build --workspace=client",
    "build-server": "npm run build --workspace=server",
    "build-all": "run-p build-client build-server",
    "server-dev": "npm run run-all --workspace=server",
    "client-dev": "npm run start --workspace=client",
    "start": "run-p server-dev client-dev"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
